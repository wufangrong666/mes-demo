import request from '@/utils/request'
// 给角色设置数据权限
export function crmCustomerPoolqueryPageList(data) {
    return request({
        url: 'crmCustomerPool/queryPageList',
        method: 'post',
        data: data,
        headers: {
            'Content-Type': 'application/json;charset=UTF-8'
        }
    })
}
