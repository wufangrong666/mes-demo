body {
  height: 100%;
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  text-rendering: optimizeLegibility;
  font-family: 'MicrosoftYaHei', 'Avenir', Helvetica, Arial, sans-serif;
  color: #333;
  font-size: 14px;
  background: #f5f6f9;
}

