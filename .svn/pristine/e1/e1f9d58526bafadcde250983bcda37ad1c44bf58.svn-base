import request from '@/utils/request'
//列表查询
export function crmCustomerQueryPageList(data) {
    return request({
        url: 'crmCustomer/queryPageList',
        method: 'post',
        data: data,
        headers: {
            'Content-Type': 'application/json;charset=UTF-8'
        }
    })
}
